{{ 'enterprise-styles.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

  #ent-hero-{{ section.id }} .ent-hero-title {
    font-size: {{ section.settings.heading_size_mobile }}px;
    color: {{ section.settings.text_color }};
  }
  #ent-hero-{{ section.id }} .ent-hero-text {
    font-size: {{ section.settings.text_size_mobile }}px;
    color: {{ section.settings.text_color }};
  }
  #ent-hero-{{ section.id }} .ent-hero-subtitle {
    color: {{ section.settings.text_color }};
  }

  @media screen and (min-width: 768px) {
    #ent-hero-{{ section.id }} .ent-hero-title {
      font-size: {{ section.settings.heading_size }}px;
    }
    #ent-hero-{{ section.id }} .ent-hero-text {
      font-size: {{ section.settings.text_size }}px;
    }
  }

  /* Button 1 Styles */
  #ent-hero-{{ section.id }} .ent-btn-primary {
    background-color: {{ section.settings.button_1_bg }};
    color: {{ section.settings.button_1_text }};
    border-color: {{ section.settings.button_1_border }};
  }
  #ent-hero-{{ section.id }} .ent-btn-primary:hover {
    background-color: {{ section.settings.button_1_hover_bg }};
    color: {{ section.settings.button_1_hover_text }};
    border-color: {{ section.settings.button_1_hover_border }};
  }

  /* Button 2 Styles */
  #ent-hero-{{ section.id }} .ent-btn-secondary {
    background-color: {{ section.settings.button_2_bg }};
    color: {{ section.settings.button_2_text }};
    border-color: {{ section.settings.button_2_border }};
  }
  #ent-hero-{{ section.id }} .ent-btn-secondary:hover {
    background-color: {{ section.settings.button_2_hover_bg }};
    color: {{ section.settings.button_2_hover_text }};
    border-color: {{ section.settings.button_2_hover_border }};
  }

  /* Mobile Overrides */
  @media screen and (max-width: 767px) {
     #ent-hero-{{ section.id }} {
        min-height: {{ section.settings.mobile_height }}px !important;
     }
     #ent-hero-{{ section.id }} .ent-hero-content {
        text-align: {{ section.settings.mobile_text_alignment }} !important;
     }
     #ent-hero-{{ section.id }} .ent-hero-actions {
        justify-content: {% if section.settings.mobile_text_alignment == 'center' %}center{% elsif section.settings.mobile_text_alignment == 'right' %}flex-end{% else %}flex-start{% endif %} !important;
     }
  }
{%- endstyle -%}

<div
  id="ent-hero-{{ section.id }}"
  class="ent-hero-section section-{{ section.id }}-padding"
  style="min-height: {{ section.settings.section_height }}px;"
>
  {%- if section.settings.image != blank -%}
    <div class="ent-hero-bg">
      {{
        section.settings.image
        | image_url: width: 3000
        | image_tag: loading: 'eager', widths: '550, 750, 1100, 1500, 1780, 2000, 3000', alt: section.settings.image.alt
        | escape
      }}
    </div>
  {%- else -%}
    <div
      class="ent-hero-bg"
      style="background-color: #f4f4f4; display: flex; align-items: center; justify-content: center;"
    >
      {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
  {%- endif -%}

  <div
    class="ent-hero-overlay"
    style="background: {{ section.settings.overlay_color | color_modify: 'alpha', section.settings.overlay_opacity }};"
  ></div>

  <div class="ent-hero-content-wrapper {% if section.settings.full_width %}ent-full-width{% endif %}">
    <div class="ent-hero-content ent-align-{{ section.settings.text_alignment }}">
      {%- if section.settings.subheading != blank -%}
        <span class="ent-hero-subtitle">
          {{- section.settings.subheading | escape -}}
        </span>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h2 class="ent-hero-title">
          {{ section.settings.heading | escape }}
        </h2>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <div class="ent-hero-text">
          {{ section.settings.text }}
        </div>
      {%- endif -%}

      {%- if section.settings.button_label_1 != blank or section.settings.button_label_2 != blank -%}
        <div class="ent-hero-actions">
          {%- if section.settings.button_label_1 != blank -%}
            <a href="{{ section.settings.button_link_1 }}" class="ent-btn ent-btn-primary">
              {{ section.settings.button_label_1 | escape }}
            </a>
          {%- endif -%}
          {%- if section.settings.button_label_2 != blank -%}
            <a href="{{ section.settings.button_link_2 }}" class="ent-btn ent-btn-secondary">
              {{ section.settings.button_label_2 | escape }}
            </a>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

