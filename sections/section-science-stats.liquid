{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .science-stats-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    text-align: center;
  }

  .science-stats-heading {
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    margin-bottom: 3rem;
    font-weight: 700;
    line-height: 1.2;
  }

  .science-stats-grid {
    display: flex;
    justify-content: space-between;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .science-stat-item {
    flex: 1;
    min-width: 250px;
    text-align: center;
  }

  .science-stat-number {
    font-size: {{ section.settings.number_size }}px;
    font-weight: 800;
    color: {{ section.settings.number_color }};
    line-height: 1;
    margin-bottom: 1rem;
    display: block;
  }

  .science-stat-text {
    font-size: {{ section.settings.text_size }}px;
    color: {{ section.settings.text_color }};
    line-height: 1.5;
    max-width: 300px;
    margin: 0 auto;
  }

  @media screen and (max-width: 768px) {
    .science-stats-heading {
      font-size: {{ section.settings.heading_size_mobile }}px;
    }
    .science-stat-number {
      font-size: {{ section.settings.number_size_mobile }}px;
    }
    .science-stats-grid {
      flex-direction: column;
      gap: 3rem;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding" style="background-color: {{ section.settings.bg_color }};">
  <div class="science-stats-container">
    {%- if section.settings.heading != blank -%}
      <h2 class="science-stats-heading">{{ section.settings.heading | escape }}</h2>
    {%- endif -%}

    <div class="science-stats-grid">
      {%- for block in section.blocks -%}
        <div class="science-stat-item" {{ block.shopify_attributes }}>
          {%- if block.settings.number != blank -%}
            <span class="science-stat-number">{{ block.settings.number }}</span>
          {%- endif -%}
          {%- if block.settings.text != blank -%}
            <div class="science-stat-text">{{ block.settings.text }}</div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Science Stats",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Use Science To Feel Better Everyday!"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 80,
      "step": 1,
      "unit": "px",
      "label": "Heading Size (Desktop)",
      "default": 48
    },
    {
      "type": "range",
      "id": "heading_size_mobile",
      "min": 16,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Heading Size (Mobile)",
      "default": 32
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "number_size",
      "min": 40,
      "max": 150,
      "step": 2,
      "unit": "px",
      "label": "Number Size (Desktop)",
      "default": 96
    },
    {
      "type": "range",
      "id": "number_size_mobile",
      "min": 30,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Number Size (Mobile)",
      "default": 64
    },
    {
      "type": "color",
      "id": "number_color",
      "label": "Number Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text Size",
      "default": 16
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Statistic",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "81"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Description",
          "default": "<p>Users reported relief from bloating in 4 weeks</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Science Stats",
      "blocks": [
        {
